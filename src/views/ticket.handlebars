<div class="container my-5">
  <div class="row">
    <div class="col-md-4 offset-md-4">

      <div class="px-4 py-5 border border-5 rounded-3">
        <h5 class="text-uppercase text-center">User: {{ticket.purchaser}}</h5>
        <h4 class="fw-bold my-4 text-center">Thanks for your order</h4>
        <h6 class="fw-bold text-center">Purchase Summary</h6>
        <div class="mb-3">
          <hr>
        </div>

        <div class="d-flex justify-content-between">
          <span class="fw-bold">Purchase Code</span>
          <span class="fw-bold">{{ticket.code}}</span>
        </div>

        <div class="d-flex justify-content-between">
          <span class="fw-bold">Date</span>
          <span class="fw-bold">{{formatDate ticket.purchase_datetime}}</span>
        </div>
        <hr>
        <h6 class="fw-bold text-center my-3">Purchased products</h6>

        {{#each ticket.products}}
        <div class="mt-3 row">
          <div class="text-center col-md-4">
            <span class="fw-bold">{{this.product.title}}</span>
          </div>
          <div class="text-center col-md-4">
            <span class="fw-bold">quantity: {{this.quantity}}</span>
          </div>
          <div class="text-center col-md-4">
            <span class="fw-bold">${{this.product.price}} C/U</span>
          </div>
        </div>
        {{/each}}
        <hr>
        <hr>
        <div class="d-flex justify-content-between mt-3">
          <span class="fw-bold">Total</span>
          <span class="fw-bold theme-color">${{ticket.amount}}</span>
        </div>

        <div class="text-center mt-5">
          <button class="btn btn-secondary fw-bold" id="ordenConfirm">Track your order</button>
        </div>

      </div>

      {{#if existNotPurchased}}
      <div class="border border-dark p-3 rounded-3 shadow my-4">
        <h4 class="text-center">Products not included in the purchase due to lack of stock</h4>
        {{#each productsNotPurchased.products}}
        <div class="row mt-3">
          <div class="text-center col-md-4">
            <span class="fw-bold">{{this.product.title}}</span>
          </div>
          <div class="text-center col-md-4">
            <span class="fw-bold">quantity: {{this.quantity}}</span>
          </div>
          <div class="text-center col-md-4">
            <span class="fw-bold">${{this.product.price}} C/U</span>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}

    </div>
  </div>
</div>

<script>
  document.getElementById("ordenConfirm").addEventListener("click", () => {
    window.location.href = `/products`;
  })
</script>