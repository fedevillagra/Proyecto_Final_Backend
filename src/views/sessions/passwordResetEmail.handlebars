<div class="container">
  <h1 class="text-center py-5">Password Reset</h1>

  <div class="row py-3">
    <div class="col-md-6 offset-md-3">
      <form action="/api/jwt/passwordReset" method="post" class="border border-dark p-3 rounded-3 shadow" id="passwordReset">
        <div class="mb-3">
          <label for="email" class="form-label fw-bold">Email:</label>
          <input type="email" class="form-control" name="email" id="email" required />
        </div>
        <div class="mb-3 text-center">
          <button type="submit" class="btn btn-outline-success px-5 fw-bold">Send</button>
        </div>
      </form>
      <hr />
      <div class="text-center">
        <h5>
          Write your email to send you the password recovery link
        </h5>
      </div>
      <hr />
    </div>
  </div>
</div>